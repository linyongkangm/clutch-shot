{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "commonjs",
        "alwaysStrict": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals":true,
        "noUnusedParameters":true,
        "noEmitOnError":true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "built",
        "sourceMap": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}